{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext", // Usa ES Modules
    "moduleResolution": "node",
    "esModuleInterop": true, // Permite interoperabilidade com CommonJS
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}