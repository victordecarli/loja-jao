{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext", // Usa ES Modules
    "moduleResolution": "node",
    "esModuleInterop": true, // Permite interoperabilidade com CommonJS
    "outDir": "./dist",
    "baseUrl": ".",
      "paths": {
            "@/*": ["src/*"]
    },
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}